<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="80dp"
    android:layout_height="100dp"
    android:focusable="true">

    <LinearLayout
        android:layout_width="@dimen/appWidget_selectionWidth"
        android:layout_height="@dimen/appWidget_selectionHeight"
        android:layout_gravity="bottom|center_vertical|center_horizontal|center"
        android:layout_marginBottom="@dimen/appWidget_selectionMarginBottom"
        android:background="@drawable/shortcut_selector"
        android:duplicateParentState="true" />

    <ImageView
        android:id="@+id/toggleButton"
        android:layout_width="@dimen/appWidget_width"
        android:layout_height="@dimen/appWidget_height" />
</FrameLayout>
